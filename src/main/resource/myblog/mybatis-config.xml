<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="myblog/database.properties"/>

    <typeAliases>
        <typeAlias type="myblog.model.persistent.Post" alias="Post"/>
        <typeAlias type="myblog.model.persistent.Comment" alias="Comment"/>
        <typeAlias type="myblog.model.persistent.User" alias="User"/>
        <typeAlias type="myblog.model.persistent.Category" alias="Category"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="myblog/mapper/PostMapper.xml"/>
        <mapper resource="myblog/mapper/CategoryMapper.xml"/>
    </mappers>
</configuration>